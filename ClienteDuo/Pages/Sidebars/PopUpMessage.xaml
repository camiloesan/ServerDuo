<Window x:Class="ClienteDuo.Pages.Sidebars.PopUpMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClienteDuo.Pages.Sidebars"
             xmlns:p="clr-namespace:ClienteDuo.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="370" Background="#FFE4F0FF">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center" Height="135" Width="300">
            <Label x:Name="LblAlert" Content="{x:Static p:Resources.TitleAlert}" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="LblMessage" Text="message" Margin="0,15,0,0" TextWrapping="Wrap" HorizontalAlignment="Stretch"/>
        </StackPanel>
        <Button Content="Ok" Click="BtnOkEvent" HorizontalAlignment="Right" VerticalAlignment="Center" Width="70" Height="25" Grid.Row="1" Margin="0,0,25,0"/>
    </Grid>
</Window>
